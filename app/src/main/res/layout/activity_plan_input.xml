<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanInputActivity">

    <Button
        android:id="@+id/buttonCreateEvent"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="123dp"
        android:layout_marginBottom="66dp"
        android:text="Create Event"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="351dp" />

    <EditText
        android:id="@+id/editEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:ems="10"
        android:hint="Enter event name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editEventName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Enter event date"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editEventName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="-2dp"
        android:ems="10"
        android:hint="Enter event location"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editEventName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="246dp"
        android:ems="10"
        android:hint="Enter event type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editEventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCreateEvent"
        android:layout_alignStart="@+id/editEventName"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="Enter event details"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Creating a New Event"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>